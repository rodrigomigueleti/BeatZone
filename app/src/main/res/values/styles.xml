<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogTextFont" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ThemeOverlay.MyButton" parent="ThemeOverlay.AppCompat.Light">
        <!--<item name="colorButtonNormal">@color/blue_grey_500</item>-->
        <!--<item name="android:textColor">@android:color/white</item>-->
    </style>

    <style name="CodeFontTitle" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_dark_900</item>
        <item name="android:typeface">normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CodeFontName" parent="@android:style/TextAppearance.DeviceDefault.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_dark_900</item>
        <item name="android:typeface">normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BeatZoneTheme" parent="android:Theme.Material.Light" />


</resources>
